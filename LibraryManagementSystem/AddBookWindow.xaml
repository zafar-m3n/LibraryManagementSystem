<Window x:Class="LibraryManagementSystem.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Book" Height="400" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="#f0f0f0">
        <StackPanel Margin="20">
            <Label Content="Title:"/>
            <TextBox x:Name="TitleTextBox" Width="300"/>

            <Label Content="Author:" Margin="0,10,0,0"/>
            <TextBox x:Name="AuthorTextBox" Width="300"/>

            <Label Content="Publisher:" Margin="0,10,0,0"/>
            <TextBox x:Name="PublisherTextBox" Width="300"/>

            <Label Content="Year:" Margin="0,10,0,0"/>
            <TextBox x:Name="YearTextBox" Width="300"/>

            <Button Content="Add Book" 
                    Width="100" 
                    Margin="0,20,0,0" 
                    HorizontalAlignment="Center"
                    Click="AddBookButton_Click"
                    Background="#007ACC" 
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
