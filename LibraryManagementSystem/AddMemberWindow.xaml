<Window x:Class="LibraryManagementSystem.AddMemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Member" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="#f0f0f0">
        <StackPanel Margin="20">
            <Label Content="Name:"/>
            <TextBox x:Name="NameTextBox" Width="300"/>

            <Label Content="Email:" Margin="0,10,0,0"/>
            <TextBox x:Name="EmailTextBox" Width="300"/>

            <Button Content="Add Member" 
                    Width="100" 
                    Margin="0,20,0,0" 
                    HorizontalAlignment="Center"
                    Click="AddMemberButton_Click"
                    Background="#007ACC" 
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
